<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="Attendance.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Attendance">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="BgColorWhite">#FFFFFF</Color>
            <Color x:Key="BgColorBlack">#000000</Color>
            <Color x:Key="PrimaryColorDarkBlue">#003366</Color>
            <Color x:Key="TextColorWhite">#FFFFFF</Color>
            <Color x:Key="TextColorBlack">#000000</Color>
            <Color x:Key="TextColorDarkGray">#A9A9A9</Color>
            <Color x:Key="Transparent">#00FFFFFF</Color>

        </ResourceDictionary>
    </Application.Resources>
</Application>
